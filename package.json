{
  "name": "eslint-plugin-boundaries-rust",
  "version": "0.1.0",
  "description": "Rust-powered ESLint boundaries plugin (ESLint 9+)",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.cjs",
  "exports": {
    ".": "./dist/index.cjs",
    "./recommended": "./dist/configs/recommended.cjs",
    "./strict": "./dist/configs/strict.cjs"
  },
  "napi": {
    "name": "eslint_plugin_boundaries_rust",
    "binaryName": "eslint_plugin_boundaries_rust",
    "targets": [
      "x86_64-pc-windows-msvc",
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-gnu",
      "aarch64-unknown-linux-musl"
    ]
  },
  "files": [
    "dist",
    "index.node",
    "index.d.ts",
    "native",
    "Cargo.toml",
    "Cargo.lock"
  ],
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "pnpm run build:native && pnpm run build:js",
    "build:native": "napi build --cargo-cwd native --release",
    "build:native:platform": "napi build --platform --cargo-cwd native --release",
    "build:js": "rm -rf dist && cp -R src dist",
    "create-npm-dirs": "napi create-npm-dir -t .",
    "prepack": "pnpm run build",
    "prepublishOnly": "pnpm run build:native:platform && pnpm run build:js",
    "release:assemble-prebuilds": "pnpm run create-npm-dirs && pnpm run artifacts && pnpm run build:js",
    "release:publish-prebuilds": "napi prepublish -t npm --skip-gh-release",
    "test:impl": "pnpm run build && node --test test/plugin.test.cjs",
    "test:parity": "pnpm run build && node --test test/parity.test.cjs",
    "test:parity:strict": "pnpm run build && STRICT_PARITY=1 node --test test/parity.test.cjs",
    "test:smoke:pack": "node scripts/smoke-pack.cjs",
    "test": "pnpm run test:impl"
  },
  "engines": {
    "node": ">=20"
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  },
  "dependencies": {
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-module-utils": "^2.12.1"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "eslint": "^9.20.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.4.0",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.28.2",
  "optionalDependencies": {
    "eslint-plugin-boundaries-rust-win32-x64-msvc": "0.1.0",
    "eslint-plugin-boundaries-rust-darwin-x64": "0.1.0",
    "eslint-plugin-boundaries-rust-linux-x64-gnu": "0.1.0"
  }
}
